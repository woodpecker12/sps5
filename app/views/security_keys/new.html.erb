<% provide(:title, 'Security Key Derive') %>
<h1><%= yield(:title) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@key) do |f| %>
        <%= f.label 'Enb Key / NH' %>
        <%= f.text_field :enb_key %>
        <%= f.label 'NCC' %>
        <%= f.text_field :ncc, placeholder: "0...7" %>
        <%= f.label 'DL-ARFCN' %>
        <%= f.text_field :dl_arfcn %>
        <%= f.label 'Security Algorithm' %>
        <%= f.text_field :sec_algo, placeholder: "0...3" %>
        <%= f.label 'Integrity Algorithm' %>
        <%= f.text_field :int_algo, placeholder: "0...3" %>
        <%= f.submit "Derive", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>